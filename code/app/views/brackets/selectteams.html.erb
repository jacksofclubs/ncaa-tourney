<div class='container'>
  <h1>Select 68 Teams to Participate</h1>

  <%= form_tag activateteams_brackets_path, method: :put do %>
    <div class='row'>
      <div class='col-md-4 col-md-offset-2 text-right outline'>      
        <strong>Division</strong>        
        <div>
          <%= select_tag(:topl_div, options_for_select(@regions_options), prompt: 'Select Upper Left Division') %>
        </div>
