                <%-# select_tag(:topl_1, options_from_collection_for_select(Team.all, :id, :school_name)) %>
              </td>
            </tr>
            <% end %>
            <%-# end loop %>  
          </table>
        </div>
      </div>
      <!--
      <div class='col-md-4 text-center outline'>
        <! column 2 - nothing here
      </div>
      -->
